
@{
    ViewBag.Title = "Thêm hành trình tình nguyện";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper" style="min-height: 946px;">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Thêm hành trình tình nguyện
        </h1>
        <ol class="breadcrumb">
            <li><a href="/"><i class="fa fa-edit"></i> Hành trình tình nguyện</a></li>
            <li class="active">Thêm mới</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-8">
                <!-- general form elements -->
                <div class="box box-primary">
                    <!-- form start -->
                    @using (Html.BeginForm("AddJourney", "Journey", FormMethod.Post, new { id = "frmAdd" }))
                    {
                        <div class="box-body">
                            <div class="col-lg-12 form-group">
                                <label>Tên hành trình</label>
                                <input type="text" class="form-control" name="Journey_Name" placeholder="Nhập tên hành trình">
                            </div>
                            <div class="col-lg-6 form-group">
                                <label>Điểm bắt đầu</label>
                                <input type="text" class="form-control" name="Location_Go" placeholder="Nhập điểm bắt đầu">
                            </div>
                            <div class="col-lg-6 form-group">
                                <label>Điểm đến</label>
                                <input type="text" class="form-control" name="Destination" placeholder="Nhập điểm đến">
                            </div>
                            <div class="col-lg-6 form-group">
                                <label>Ngày kết thúc:</label>
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input type="text" name="StartDate" class="form-control datepicker">
                                </div><!-- /.input group -->
                            </div>
                            <div class="col-lg-6 form-group">
                                <label>Ngày kết thúc:</label>
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input type="text" name="EndDate" class="form-control datepicker">
                                </div><!-- /.input group -->
                            </div>
                        </div><!-- /.box-body -->

                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">Thêm mới</button>
                        </div>
                    }
                </div><!-- /.box -->

            </div><!--/.col (left) -->
        </div>   <!-- /.row -->
    </section><!-- /.content -->
</div>

@section jsAdmin{

    <script>

        $(function () {
            var date = new Date();
            var today = new Date(date.getFullYear(), date.getMonth(), date.getDate());
            $(".datepicker").datepicker({
                format: "dd-mm-yyyy",
                autoclose: true,
                todayHighlight: true,
                startDate: today
            }).datepicker('update', new Date());

            $('.datepicker').datepicker('setDate', today);
            //Khi bàn phím được nhấn và thả ra thì sẽ chạy phương thức này
            $("#frmAdd").validate({
                rules: {
                    Location_Go: "required",
                    Destination: "required",
                    StartDate: "required",
                    EndDate: "required",
                    Journey_Name: "required"
                },
                messages: {
                    Location_Go: "Vui lòng nhập điểm bắt đầu",
                    Destination: "Bạn chưa nhập điểm đến",
                    StartDate: "Vui lòng nhập ngày bắt đầu",
                    EndDate: "Bạn chưa nhập ngày kết thúc",
                    Journey_Name: "Vui lòng nhập tên hành trình"
                }
            });

        });
    </script>

}


