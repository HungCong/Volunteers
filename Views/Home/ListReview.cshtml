
@using Volunteers.Models.DTO;
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Đợt tình nguyện được đánh giá";
    var lstReview = ViewBag.lstReview as List<ReviewDTO>;
    int dem = 0;
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Đợt tình nguyện được đánh giá
        </h1>
        <ol class="breadcrumb">
            <li><a href="/Admin/Home/Round_Volunteer_NotTest"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
            <li class="active">Đợt tình nguyện được đánh giá</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th class="text-center">Tên đợt tình nguyện</th>
                                    <th>Tiêu chí 1</th>
                                    <th>Tiêu chí 2</th>
                                    <th>Tiêu chí 3</th>
                                    <th>Điểm đánh giá</th>
                                    <th>Ngày đánh giá</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in lstReview)
                                {
                                    var str = "Địa điểm: " + item.Round_Volunteer_Name + ", Bắt đầu: " + @item.StartDate.Value.ToString("dd/MM/yyyy") + ", Kết thúc: " + item.EndDate.Value.ToString("dd/MM/yyyy");
                                    dem++;
                                    <tr>
                                        <td>@dem</td>
                                        <td>@str</td>
                                        <td>@item.Standard_1</td>
                                        <td>@item.Standard_2</td>
                                        <td>@item.Standard_3</td>
                                        <td>@item.Point</td>
                                        <td>@item.CreatedDate.Value.ToString("dd/MM/yyyy")</td>
                                    </tr>
                                }

                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>#</th>
                                    <th class="text-center">Tên đợt tình nguyện</th>
                                    <th>Tiêu chí 1</th>
                                    <th>Tiêu chí 2</th>
                                    <th>Tiêu chí 3</th>
                                    <th>Điểm đánh giá</th>
                                    <th>Ngày đánh giá</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->

            </div><!-- /.col -->
        </div><!-- /.row -->
    </section><!-- /.content -->
</div><!-- /.content-wrapper -->
