@using Volunteers.Models.Entity;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Đợt tình nguyện";
    var LstVolunteer = ViewBag.LstVolunteer as List<Round_Volunteer>;
    int dem = 0;
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Đợt tình nguyện đang diễn ra
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
            <li class="active">Đợt tình nguyện</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <a href="/Home/AddVolunteer" class="btn btn-lg btn-primary">Thêm mới</a>
                    </div><!-- /.box-header -->
                    @if (TempData["add_success"] != null)
                    {
                        <div class="alert alert-success text-center" id="AlertBox">
                            @TempData["add_success"]
                        </div>
                    }
                    <div class="box-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Địa điểm</th>
                                    <th>Bắt đầu ngày</th>
                                    <th>Kết thúc ngày</th>
                                    <th>Số tình nguyện viên</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in LstVolunteer)
                                {
                                    dem++;
                                    <tr>
                                        <td>@dem</td>
                                        <td>@item.Place</td>
                                        <td>@item.StartDate.Value.ToString("dd/MM/yyyy")</td>
                                        <td>@item.EndDate.Value.ToString("dd/MM/yyyy")</td>
                                        <td>@item.Register</td>
                                        <td>
                                            <a href="/Home/EditVolunteer/@item.ID" class="btn btn-info" title="Sửa đợt hành trình"><i class="fa fa-edit"></i></a>
                                            <button class="btn btn-danger btnDelete" data-id="@item.ID" title="Xóa đợt hành trình"><i class="fa fa-remove"></i></button>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>#</th>
                                    <th>Địa điểm</th>
                                    <th>Bắt đầu ngày</th>
                                    <th>Kết thúc ngày</th>
                                    <th>Tình nguyện viên</th>
                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->

            </div><!-- /.col -->
        </div><!-- /.row -->
    </section><!-- /.content -->
</div><!-- /.content-wrapper -->

@section jsAdmin{

    <script>
        //nếu không có thao tác gì thì ẩn đi
        $('#AlertBox').removeClass('hide');

        //Sau khi hiển thị lên thì delay 1s và cuộn lên trên sử dụng slideup
        $('#AlertBox').delay(2000).slideUp(500);
        $(function () {
             $('.btnDelete').off('click').on('click', function () {
                const notice = PNotify.notice({
                    title: 'Thông báo',
                    text: 'Bạn thật sự muốn xóa?',
                    icon: 'fa fa-question-circle',
                    width: '360px',
                    minHeight: '110px',
                    hide: false,
                    closer: false,
                    sticker: false,
                    destroy: true,
                    stack: new PNotify.Stack({
                        dir1: 'down',
                        modal: true,
                        firstpos1: 25,
                        overlayClose: false
                    }),
                    modules: new Map([
                        ...PNotify.defaultModules,
                        [PNotifyConfirm, {
                            confirm: true
                        }]
                    ])
                });

                notice.on('pnotify:confirm', () =>
                    $.ajax({
                        data: {ID: $(this).data('id')},
                        url: '/Home/Delete',
                        dataType: 'Json',
                        type: 'POST',
                        success: function (res) {
                            if (res.status == true) {
                                window.location.href = "/";
                                PNotify.success({
                                    title: 'THÔNG BÁO!!',
                                    text: 'Xóa thành công.'
                                });
                            }
                        }
                    })

                );


            });
        });
    </script>

}