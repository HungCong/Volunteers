@using Volunteers.Models.Entity;
@using Volunteers.Models.DTO;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Tình nguyện viên tham gia";
    var LstVolunteer = ViewBag.lstVolunteer as List<RoundVolunteerDTO>;
    var Round_Volunteer = ViewBag.Round_Volunteer as Round_Volunteer;
    int dem = 0;
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Danh sách TNV tham gia: <span style="color: blue">@Round_Volunteer.Place</span>
        </h1>
        <ol class="breadcrumb">
            <li><a href="/"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
            <li><a href="/">Đợt tình nguyện</a></li>
            <li class="active">Danh sách tình nguyện viên</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Họ và tên</th>
                                    <th>Ngày sinh</th>
                                    <th>Số điện thoại</th>
                                    <th>Vai trò</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (LstVolunteer != null)
                                {
                                    foreach (var item in LstVolunteer)
                                    {
                                        dem++;
                                        <tr>
                                            <td>@dem</td>
                                            <td>@item.Fullname</td>
                                            <td>@item.Birthday.Value.ToString("dd/MM/yyyy")</td>
                                            <td>@item.Phone</td>
                                            <td>@item.RoleName</td>
                                        </tr>
                                    }
                                }

                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>#</th>
                                    <th>Họ và tên</th>
                                    <th>Ngày sinh</th>
                                    <th>Số điện thoại</th>
                                    <th>Vai trò</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->

            </div><!-- /.col -->
        </div><!-- /.row -->
    </section><!-- /.content -->
</div><!-- /.content-wrapper -->
<!-- The Modal -->
