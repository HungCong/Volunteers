@using Volunteers.Models.DTO;
@using Volunteers.Models.Entity;
@{
    ViewBag.Title = "Vật chất cho đợt tình nguyện";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var lstTotalMoney = ViewBag.lstTotalMoney as List<Materal_SupportDTO>;
    var lstMaterial = ViewBag.LstMaterial as List<Materal_SupportDTO>;
    var round_volunteer = ViewBag.Round_Volunteer as Round_Volunteer;
    int dem1 = 0, dem2 = 0;
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Vật chất cho đợt tình nguyện tại: <span style="color: blue">@round_volunteer.Place</span>
        </h1>
        <ol class="breadcrumb">
            <li><a href="/"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
            <li><a href="/">Đợt tình nguyện</a></li>
            <li class="active">Vật chất đợt tình nguyện</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box-header">
                    <button type="button" class="btn btn-lg btn-primary" data-toggle="modal" data-target="#addVolunteer">Thêm mới</button>
                    @if (TempData["add_success"] != null)
                    {
                        <div class="alert alert-success text-center" id="AlertBox">
                            @TempData["add_success"]
                        </div>
                    }
                </div><!-- /.box-header -->
            </div>
            <div class="col-xs-6">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Vật chất</h3>
                    </div><!-- /.box-header -->

                    <div class="box-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Vật chất</th>
                                    <th>Số lượng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (lstMaterial != null)
                                {
                                    foreach (var item in lstMaterial)
                                    {
                                        dem1++;
                                        <tr>
                                            <td>@dem1</td>
                                            <td>@item.Material_Name</td>
                                            <td>@item.Quantity</td>
                                        </tr>
                                    }
                                }

                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>#</th>
                                    <th>Vật chất</th>
                                    <th>Số lượng</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->

            </div><!-- /.col -->
            <div class="col-xs-6">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Tiền mặt</h3>
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Vật chất</th>
                                    <th>Số tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (lstTotalMoney != null)
                                {
                                    foreach (var item in lstTotalMoney)
                                    {
                                        dem2++;
                                        <tr>
                                            <td>@dem2</td>
                                            <td>@item.Material_Name</td>
                                            <td>@item.TotalMoney.Value.ToString("N0")</td>
                                        </tr>
                                    }
                                }

                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>#</th>
                                    <th>Vật chất</th>
                                    <th>Số tiền</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->

            </div><!-- /.col -->
        </div><!-- /.row -->
    </section><!-- /.content -->
</div><!-- /.content-wrapper -->
<!-- The Modal -->





