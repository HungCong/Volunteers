
@{
    ViewBag.Title = "Sửa đợt tình nguyện";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var volunteer = ViewBag.Round_Volunteer as Volunteers.Models.Entity.Round_Volunteer;
}

<div class="content-wrapper" style="min-height: 946px;">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Thêm mới đợt tình nguyện
        </h1>
        <ol class="breadcrumb">
            <li><a href="/"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
            <li><a href="/">Đợt tình nguyện</a></li>
            <li class="active">Sửa đợt tình nguyện</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-8">
                <!-- general form elements -->
                <div class="box box-primary">
                    <!-- form start -->
                    @using (Html.BeginForm("Edit", "Home", FormMethod.Post, new { id = "frmEdit" }))
                    {
                        <input type="hidden" name="ID" value="@volunteer.ID"/>
                        <div class="box-body">
                            <div class="col-lg-6 form-group">
                                <label>Địa điểm</label>
                                <input type="text" class="form-control" name="Place" value="@volunteer.Place" placeholder="Nhập địa điểm tình nguyện">
                            </div>
                            <div class="col-lg-6 form-group">
                                <label>Số tình nguyện viên tham gia</label>
                                <input type="number" class="form-control" name="Register" value="@volunteer.Register" placeholder="Nhập số tình nguyện tham gia">
                            </div>
                            <div class="col-lg-6 form-group">
                                <label>Ngày bắt đầu:</label>
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input type="text" name="StartDate" class="form-control datepicker" value="@volunteer.StartDate" data-inputmask="'alias': 'dd/mm/yyyy'">
                                </div><!-- /.input group -->
                            </div>
                            <div class="col-lg-6 form-group">
                                <label>Ngày kết thúc:</label>
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input type="text" name="EndDate" class="form-control datepicker" value="@volunteer.EndDate" data-inputmask="'alias': 'dd/mm/yyyy'">
                                </div><!-- /.input group -->
                            </div>
                        </div><!-- /.box-body -->

                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">Sửa</button>
                        </div>
                    }
                </div><!-- /.box -->

            </div><!--/.col (left) -->
        </div>   <!-- /.row -->
    </section><!-- /.content -->
</div>

@section jsAdmin{

    <script>

        $(function () {
            var date = new Date();
            var today = new Date(date.getFullYear(), date.getMonth(), date.getDate());
            $(".datepicker").datepicker({
                format: "dd-mm-yyyy",
                autoclose: true,
                todayHighlight: true,
                startDate: today
            }).datepicker('update', new Date());

            $('.datepicker').datepicker('setDate', today);

            //Khi bàn phím được nhấn và thả ra thì sẽ chạy phương thức này
            $("#frmEdit").validate({
                rules: {
                    Place: "required",
                    Register: "required",
                    StartDate: "required",
                    EndDate: "required"
                },
                messages: {
                    Place: "Vui lòng địa điểm",
                    Register: "Bạn chưa nhập số tình nguyện viên",
                    StartDate: "Vui lòng nhập ngày bắt đầu",
                    EndDate: "Bạn chưa nhập ngày kết thúc"
                }
            });
        });
    </script>

}

