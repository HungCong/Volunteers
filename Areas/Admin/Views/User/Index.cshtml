
@{
    ViewBag.Title = "Tài khoản đăng nhập";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var lstUser = ViewBag.lstUser as List<Volunteers.Models.Entity.User>;
    int dem = 0;
}


<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Danh sách tài khoản đăng nhập hệ thống
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-users"></i> Quản lý tình nguyện viên</a></li>
            <li class="active">Tài khoản đăng nhập hệ thống</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <a href="/Admin/User/Add" class="btn btn-lg btn-primary">Thêm mới</a>
                    </div><!-- /.box-header -->
                    @if (TempData["add_success"] != null)
                    {
                        <div class="alert alert-success text-center" id="AlertBox">
                            @TempData["add_success"]
                        </div>
                    }
                    <div class="box-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Họ và tên</th>
                                    <th>Tài khoản</th>
                                    <th>Hình ảnh</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in lstUser)
                                {
                                    dem++;
                                    <tr>
                                        <td>@dem</td>
                                        <td>@item.Fullname</td>
                                        <td>@item.Account</td>
                                        <td><img src="~/Assets/dist/img/@item.Image" style="width: 50px;" alt="Alternate Text" /></td>
                                        <td>
                                            <button class="btn btn-danger btnDelete" data-id="@item.ID" title="Xóa tài khoản"><i class="fa fa-remove"></i></button>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>#</th>
                                    <th>Họ và tên</th>
                                    <th>Tài khoản</th>
                                    <th>Hình ảnh</th>
                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->

            </div><!-- /.col -->
        </div><!-- /.row -->
    </section><!-- /.content -->
</div><!-- /.content-wrapper -->

@section jsAdmin{

    <script>
        //nếu không có thao tác gì thì ẩn đi
        $('#AlertBox').removeClass('hide');

        //Sau khi hiển thị lên thì delay 1s và cuộn lên trên sử dụng slideup
        $('#AlertBox').delay(2000).slideUp(500);
        $(function () {
             $('.btnDelete').off('click').on('click', function () {
                const notice = PNotify.notice({
                    title: 'Thông báo',
                    text: 'Bạn thật sự muốn xóa?',
                    icon: 'fa fa-question-circle',
                    width: '360px',
                    minHeight: '110px',
                    hide: false,
                    closer: false,
                    sticker: false,
                    destroy: true,
                    stack: new PNotify.Stack({
                        dir1: 'down',
                        modal: true,
                        firstpos1: 25,
                        overlayClose: false
                    }),
                    modules: new Map([
                        ...PNotify.defaultModules,
                        [PNotifyConfirm, {
                            confirm: true
                        }]
                    ])
                });

                notice.on('pnotify:confirm', () =>
                    $.ajax({
                        data: {ID: $(this).data('id')},
                        url: '/Admin/User/Delete',
                        dataType: 'Json',
                        type: 'POST',
                        success: function (res) {
                            if (res.status == true) {
                                window.location.href = "/Admin/User/Index";
                                PNotify.success({
                                    title: 'THÔNG BÁO!!',
                                    text: 'Xóa thành công.'
                                });
                            }
                        }
                    })

                );


            });
        });
    </script>

}



