

@using Volunteers.Models.Entity;
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Đợt tình nguyện chưa duyệt";
    var LstVolunteer = ViewBag.LstVolunteer as List<Round_Volunteer>;
    int dem = 0;
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Đợt tình nguyện đã duyệt
        </h1>
        <ol class="breadcrumb">
            <li><a href="/Admin/Home/Round_Volunteer_NotTest"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
            <li class="active">Đợt TN đã duyệt</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Địa điểm</th>
                                    <th>Bắt đầu ngày</th>
                                    <th>Kết thúc ngày</th>
                                    <th>Số tình nguyện viên</th>
                                    <th>Trạng thái</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in LstVolunteer)
                                {
                                    dem++;
                                    <tr>
                                        <td>@dem</td>
                                        <td>@item.Place</td>
                                        <td>@item.StartDate.Value.ToString("dd/MM/yyyy")</td>
                                        <td>@item.EndDate.Value.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            <a href="/Admin/Home/ListVolunteer/@item.ID" class="btn btn-primary" title="Danh sách tình nguyện tham gia">@item.Register Tình nguyện viên</a>
                                        </td>
                                        @if(item.Status == 2)
                                        {
                                            <td><span class="label label-success">Đang mời đăng ký</span></td>
                                        }
                                        else if(item.Status == 3)
                                        {
                                            <td><span class="label label-default">Hết hạn đăng ký</span></td>
                                        }else if(item.Status == 4)
                                        {
                                            <td><span class="label label-info">Đã duyệt</span></td>
                                        }
                                        else if(item.Status == 5)
                                        {
                                            <td><span class="label label-danger">Đã kết thúc</span></td>
                                        }
                                        <td>
                                            <a href="/Admin/Home/ListMaterial_Support/@item.ID" class="btn btn-default" title="Vật chất đợt tình nguyện"><i class="fa fa-info-circle"></i></a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>#</th>
                                    <th>Địa điểm</th>
                                    <th>Bắt đầu ngày</th>
                                    <th>Kết thúc ngày</th>
                                    <th>Số tình nguyện viên</th>
                                    <th>Trạng thái</th>
                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->

            </div><!-- /.col -->
        </div><!-- /.row -->
    </section><!-- /.content -->
</div><!-- /.content-wrapper -->
