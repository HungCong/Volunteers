@{
    var round_volunteer = ViewBag.Round_Volunteer as Volunteers.Models.Entity.Round_Volunteer;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Chi tiết đợt tình nguyện</title>
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
    <!-- Bootstrap 3.3.4 -->
    <link href="~/Assets/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!-- Font Awesome Icons -->
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <!-- Ionicons -->
    <link href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css" rel="stylesheet" type="text/css" />
    <!-- Theme style -->
    <link href="~/Assets/dist/css/AdminLTE.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Assets/dist/css/skins/_all-skins.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Assets/style.css" rel="stylesheet" type="text/css" />

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="skin-blue fixed" data-spy="scroll" data-target="#scrollspy">
    <div class="wrapper">

        <header class="main-header">
            <!-- Logo -->
            <a href="/Admin/Home/Round_Volunteer_NotTest" class="logo">
                <!-- mini logo for sidebar mini 50x50 pixels -->
                <span class="logo-mini"><b>A</b>LT</span>
                <!-- logo for regular state and mobile devices -->
                <span class="logo-lg"><b>Admin</b>LTE</span>
            </a>
            <!-- Header Navbar: style can be found in header.less -->
            <nav class="navbar navbar-static-top" role="navigation">
                <!-- Sidebar toggle button-->
                <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only">Toggle navigation</span>
                </a>
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <li class="dropdown user user-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <img src="~/Assets/dist/img/avatar.png" class="user-image" alt="User Image" />
                                <span class="hidden-xs">Aministrator</span>
                            </a>
                            <ul class="dropdown-menu">
                                <!-- User image -->
                                <li class="user-header">
                                    <img src="~/Assets/dist/img/avatar.png" class="img-circle" alt="User Image" />
                                    <p>
                                        Aministrator
                                    </p>
                                </li>
                                <li class="user-footer">
                                    <div class="pull-right">
                                        <a href="#" class="btn btn-default btn-flat">Đăng xuất</a>
                                    </div>
                                </li>
                            </ul>
                        </li>
                        <!-- Control Sidebar Toggle Button -->
                        <li>
                            <a href="#" data-toggle="control-sidebar"><i class="fa fa-gears"></i></a>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <!-- Left side column. contains the logo and sidebar -->
        <aside class="main-sidebar">
            <!-- sidebar: style can be found in sidebar.less -->
            <div class="sidebar" id="scrollspy">

                <!-- sidebar menu: : style can be found in sidebar.less -->
                <ul class="nav sidebar-menu">
                    <li class="header">TABLE OF CONTENTS</li>
                    <li class="active"><a href="#Place"><i class='fa fa-circle-o'></i> Đia điểm</a></li>
                    <li><a href="#Time"><i class='fa fa-circle-o'></i> Thời gian</a></li>
                    <li><a href="#Count"><i class='fa fa-circle-o'></i> Số lượng tình nguyện viên</a></li>
                    <li><a href="#Description"><i class='fa fa-circle-o'></i> Nội dung</a></li>
                </ul>
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <div class="content-header">
                <h1>
                    Chi tiết đợt tình nguyện tại: <span style="color: #3c8dbc">@round_volunteer.Place</span>
                </h1>
                <ol class="breadcrumb">
                    <li><a href="/Admin/Home/Round_Volunteer_NotTest"><i class="fa fa-dashboard"></i>Trang chủ</a></li>
                    <li><a href="/Admin/Home/Round_Volunteer_NotTest">Đợt TN chưa duyệt</a></li>
                    <li class="active">Chi tiết đợt tình nguyện</li>
                </ol>
            </div>

            <!-- Main content -->
            <div class="content body">

                <section id='Place'>
                    <h2 class='page-header'><a href="#introduction">Địa điểm</a></h2>
                    <p class='lead'>
                        @round_volunteer.Place
                    </p>
                </section><!-- /#introduction -->
                <!-- ============================================================= -->

                <section id='Time'>
                    <h2 class='page-header'><a href="#Time">Thời gian</a></h2>
                    <ul class="bring-up">
                        <li>Thời hạn đăng ký  : <code>@round_volunteer.Dealine_Register.Value.ToString("dd/MM/yyyy")</code></li>
                        <li>Thời gian bắt đầu : <code>@round_volunteer.StartDate.Value.ToString("dd/MM/yyyy")</code></li>
                        <li>Thời gian kết thúc: <code>@round_volunteer.EndDate.Value.ToString("dd/MM/yyyy")</code></li>
                    </ul>
                </section>

                <!-- ============================================================= -->
                <!-- ============================================================= -->

                <section id='Count'>
                    <h2 class='page-header'><a href="#Count">Số lượng tình nguyện viên</a></h2>
                    <ul class="bring-up">
                        <li>Số TNV tham gia tối thiểu: <a href="#">@round_volunteer.MinPeople</a></li>
                        <li>Số TNV tham gia tối đa   : <a href="#">@round_volunteer.MaxPeople</a></li>
                    </ul>
                </section>

                <!-- ============================================================= -->

                <section id="Description">
                    <h2 class="page-header"><a href="#Description">Nội dung</a></h2>
                    @Html.Raw(round_volunteer.Description)
                </section>

                <!-- ============================================================= -->
            </div><!-- /.content -->
            <!-- Main content -->
            <section class="content">
                <div class="row">
                    <div class="col-md-12">
                        <div class="box box-primary">
                            <div class="box-body">
                                <div class="form-group col-xs-12">
                                    <div class="col-sm-2">
                                    </div>
                                    <div class="col-sm-3">
                                        <button type="button" data-id="@round_volunteer.ID" class="btn btn-warning btn-lg btnCancer">Không duyệt</button>
                                    </div>
                                    <div class="col-sm-2">
                                    </div>
                                    <div class="col-sm-3">
                                        <button type="button" data-id="@round_volunteer.ID" class="btn btn-primary btn-lg btnTest">Duyệt đợt TN</button>
                                    </div>
                                </div>
                            </div><!-- /.box-body -->
                            @using (Html.BeginForm("Round_VolunteerCancer", "Home", FormMethod.Post, new { id = "frmCancer" }))
                            {
                                <input type="hidden" name="ID" value="@round_volunteer.ID" />
                                <div class="box-body">
                                    <div class="form-group">
                                        <label>Lý do không duyệt</label>
                                        <textarea class="form-control" rows="3" name="ReasonNotTest" placeholder="Bạn vui lòng nhập lý do..."></textarea>
                                    </div>
                                </div><!-- /.box-body -->
                                <div class="box-footer">
                                    <button type="submit" class="btn btn-primary">Gửi</button>
                                </div>
                            }
                           
                        </div>
                    </div><!-- /.col-->
                </div><!-- ./row -->
            </section><!-- /.content -->
        </div><!-- /.content-wrapper -->

        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>Version</b> 2.0
            </div>
            <strong>Copyright &copy; 2014-2015 <a href="http://almsaeedstudio.com">Almsaeed Studio</a>.</strong> All rights reserved.
        </footer>

    </div><!-- ./wrapper -->
    <!-- jQuery 2.1.4 -->
    <script src="~/Assets/plugins/jQuery/jQuery-2.1.4.min.js"></script>
    <!-- Bootstrap 3.3.2 JS -->
    <script src="~/Assets/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <!-- FastClick -->
    <script src='~/Assets/plugins/fastclick/fastclick.min.js'></script>
    <!-- AdminLTE App -->
    <script src="~/Assets/dist/js/app.min.js" type="text/javascript"></script>
    <!-- SlimScroll 1.3.0 -->
    <script src="~/Assets/plugins/slimScroll/jquery.slimscroll.min.js" type="text/javascript"></script>
    <script src="https://google-code-prettify.googlecode.com/svn/loader/run_prettify.js"></script>
    <script src="~/Assets/docs.js"></script>
    <script type="text/javascript">
        $('#frmCancer').css("display", "none");
        $(function () {

            $('.btnCancer').off('click').on('click', function () {
                $('#frmCancer').css("display", "block");
                
            });

            $('.btnTest').off('click').on('click', function () {
                $('#frmCancer').css("display", "none");
                $.ajax({
                    data: {
                        ID: $(this).data('id')
                    },
                    url: '/Admin/Home/ChangeStatus',
                    dataType: 'Json',
                    type: 'POST',
                    success: function (res) {
                        if (res.status == true) {
                            window.location.href = "/Admin/Home/Round_Volunteer_Tested";
                            PNotify.success({
                                title: 'THÔNG BÁO!!',
                                text: 'Duyệt đợt tình nguyện thành công.'
                            });
                        }
                    }
                });

            });
        });
    </script>
</body>
</html>


