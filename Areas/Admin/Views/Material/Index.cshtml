

@{
    ViewBag.Title = "Vật chất tình nguyện";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var LstMaterial_Money = ViewBag.LstMaterial_Money as List<Volunteers.Models.DTO.MaterialDTO>;
    var LstMaterial = ViewBag.LstMaterial as List<Volunteers.Models.DTO.MaterialDTO>;
    int dem1 = 0, dem2 = 0;
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Quản lý vật chất tình nguyện
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-table"></i> Vật chất tình nguyện</a></li>
            @*<li class="active">Mạnh thường quân</li>*@
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box-header">
                    <a href="/Admin/Material/Add" class="btn btn-lg btn-primary">Thêm mới</a>
                    @if (TempData["add_success"] != null)
                    {
                        <div class="alert alert-success text-center" id="AlertBox">
                            @TempData["add_success"]
                        </div>
                    }
                </div><!-- /.box-header -->
            </div>
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Hiện vật</h3>
                    </div><!-- /.box-header -->

                    <div class="box-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Người ủng hộ</th>
                                    <th>Vật chất</th>
                                    <th>Số lượng</th>
                                    <th>Ngày ủng hộ</th>
                                    <th>Địa điểm</th>
                                    <th>Trạng thái</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in LstMaterial)
                                {
                                    dem1++;
                                    <tr>
                                        <td>@dem1</td>
                                        <td>@item.Volunteer_Name</td>
                                        <td>@item.Material_Name</td>
                                        <td>@item.Quantity</td>
                                        <td>@item.CreatedDate.Value.ToString("dd/MM/yyyy")</td>
                                        <td>@item.Place</td>
                                        <td>
                                            @if (item.Status == true)
                                            {
                                                <span class="label label-success">Có sẵn</span>
                                            }
                                            else
                                            {
                                                <span class="label label-default">Đã hết</span>
                                            }
                                        </td>
                                        <td>
                                            <a href="/Material/Edit/@item.ID" class="btn btn-info" title="Sửa vật chất"><i class="fa fa-edit"></i></a>
                                            <button class="btn btn-danger btnDelete" data-id="@item.ID" title="Xóa vật chất"><i class="fa fa-remove"></i></button>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>#</th>
                                    <th>Người ủng hộ</th>
                                    <th>Vật chất</th>
                                    <th>Số lượng</th>
                                    <th>Ngày ủng hộ</th>
                                    <th>Địa điểm</th>
                                    <th>Trạng thái</th>
                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->

            </div><!-- /.col -->
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Tiền mặt</h3>
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Người ủng hộ</th>
                                    <th>Số tiền (vnđ)</th>
                                    <th>Ngày ủng hộ</th>
                                    <th>Địa điểm</th>
                                    <th>Trạng thái</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in LstMaterial_Money)
                                {
                                    dem2++;
                                    <tr>
                                        <td>@dem2</td>
                                        <td>@item.Volunteer_Name</td>
                                        <td>@item.TotalMoney.Value.ToString("N0")</td>
                                        <td>@item.CreatedDate.Value.ToString("dd/MM/yyyy")</td>
                                        <td>@item.Place</td>
                                        <td>
                                            @if (item.Status == true)
                                            {
                                                <span class="label label-success">Có sẵn</span>
                                            }
                                            else
                                            {
                                                <span class="label label-default">Đã hết</span>
                                            }
                                        </td>
                                        <td>
                                            <a href="/Admin/Material/Edit/@item.ID" class="btn btn-info" title="Sửa vật chất"><i class="fa fa-edit"></i></a>
                                            <button class="btn btn-danger btnDelete" data-id="@item.ID" title="Xóa vật chất"><i class="fa fa-remove"></i></button>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>#</th>
                                    <th>Người ủng hộ</th>
                                    <th>Số tiền</th>
                                    <th>Ngày ủng hộ</th>
                                    <th>Địa điểm</th>
                                    <th>Trạng thái</th>
                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->

            </div><!-- /.col -->
        </div><!-- /.row -->
    </section><!-- /.content -->
</div><!-- /.content-wrapper -->

@section jsAdmin{

    <script>
        //nếu không có thao tác gì thì ẩn đi
        $('#AlertBox').removeClass('hide');

        //Sau khi hiển thị lên thì delay 1s và cuộn lên trên sử dụng slideup
        $('#AlertBox').delay(2000).slideUp(500);
        $(function () {
             $('.btnDelete').off('click').on('click', function () {
                const notice = PNotify.notice({
                    title: 'Thông báo',
                    text: 'Bạn thật sự muốn xóa?',
                    icon: 'fa fa-question-circle',
                    width: '360px',
                    minHeight: '110px',
                    hide: false,
                    closer: false,
                    sticker: false,
                    destroy: true,
                    stack: new PNotify.Stack({
                        dir1: 'down',
                        modal: true,
                        firstpos1: 25,
                        overlayClose: false
                    }),
                    modules: new Map([
                        ...PNotify.defaultModules,
                        [PNotifyConfirm, {
                            confirm: true
                        }]
                    ])
                });

                notice.on('pnotify:confirm', () =>
                    $.ajax({
                        data: {ID: $(this).data('id')},
                        url: '/Admin/Material/Delete',
                        dataType: 'Json',
                        type: 'POST',
                        success: function (res) {
                            if (res.status == true) {
                                window.location.href = "/Admin/Material";
                                PNotify.success({
                                    title: 'THÔNG BÁO!!',
                                    text: 'Xóa thành công.'
                                });
                            } else {
                                PNotify.error({
                                    title: 'THÔNG BÁO!!',
                                    text: 'Xóa KHÔNG thành công. Bạn vui lòng xóa vật chất trong đợt tình nguyện!!'
                                });
                            }
                        }
                    })

                );


            });
        });
    </script>

}









